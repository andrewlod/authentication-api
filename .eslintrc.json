{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "parser": "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "import/first": "off"
    },
    "overrides": [
        {
            "files": ["tests/**/*"],
            "plugins": ["jest"],
            "env": {
              "jest": true
            }
        }
    ]
}
