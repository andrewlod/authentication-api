model User {
    id          Int     @id @default(autoincrement())
    email       String  @user_db.VarChar(255)   @unique
    password    String  @user_db.VarChar(128)
    is_admin    Boolean
}

datasource user_db {
    provider    = "mysql"
    url         = env("DATABASE_URL") 
}

generator client {
    provider    = "prisma-client-js"
    output      = "./generated/prisma-client.js"
}